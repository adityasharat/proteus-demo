{
  "type": "CardView",
  "layout_width": "match_parent",
  "layout_height": "wrap_content",
  "layout_margin": "16dp",
  "padding": "16dp",
  "cardBackgroundColor": "#ffffff",
  "cardElevation": "6dp",
  "contentPadding": "8dp",
  "cardCornerRadius": "4dp",
  "children": [{
    "type": "LinearLayout",
    "layout_width": "match_parent",
    "layout_height": "wrap_content",
    "orientation": "vertical",
    "children": [{
      "type": "TextView",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "textSize": "24sp",
      "text": "~Hello {{name}}"
    }, {
      "type": "TextView",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "textSize": "24sp",
      "text": "~{{location.city}}, {{location.country}}"
    }, {
      "type": "LinearLayout",
      "orientation": "horizontal",
      "layout_height": "wrap_content",
      "layout_width": "match_parent",
      "gravity": "center_vertical",
      "children": [{
        "type": "TextView",
        "layout_width": "wrap_content",
        "layout_height": "wrap_content",
        "textSize": "24sp",
        "text": "Exp:"
      }, {
        "type": "HorizontalProgressBar",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "layout_margin": "8dp",
        "layout_marginTop": "10dp",
        "max": "$experience.max",
        "progress": "$experience.current"
      }]
    }]
  }]
}