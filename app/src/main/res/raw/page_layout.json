{
  "type": "ScrollView",
  "layout_width": "match_parent",
  "layout_height": "match_parent",
  "scrollbars": "none",
  "children": [
    {
      "type": "LinearLayout",
      "layout_width": "match_parent",
      "layout_height": "match_parent",
      "orientation": "vertical",
      "background": "#efefef",
      "children": [
        {
          "type": "FrameLayout",
          "layout_width": "match_parent",
          "layout_height": "wrap_content",
          "padding": "16dp",
          "paddingBottom": "0dp",
          "children": [
            {
              "type": "LinearLayout",
              "layout_width": "match_parent",
              "layout_height": "wrap_content",
              "orientation": "vertical",
              "padding": "16dp",
              "background": "#ffffff",
              "children": [
                {
                  "type": "TextView",
                  "text": "TextView",
                  "textColor": "#000000",
                  "textSize": "12sp"
                },
                {
                  "type": "TextView",
                  "layout_width": "match_parent",
                  "gravity": "right",
                  "html": "<b>TextView</b> with <font color=#cc8322><i>HTML</i></font> content.",
                  "textSize": "14sp"
                },
                {
                  "type": "ImageView",
                  "layout_width": "60dp",
                  "layout_height": "60dp",
                  "src": "@drawable/github_icon",
                  "layout_marginRight": "8dp"
                },
                {
                  "type": "LinearLayout",
                  "orientation": "horizontal",
                  "layout_width": "match_parent",
                  "layout_marginTop": "8dp",
                  "children": [
                    {
                      "type": "TextView",
                      "layout_marginRight": "8dp",
                      "layout_height": "32dp",
                      "textSize": "12sp",
                      "textColor": "#2cdb81",
                      "text": "1",
                      "layout_weight": "1",
                      "gravity": "center",
                      "border": {
                        "width": "2dp",
                        "color": "#cccccc",
                        "bgColor": "#efefef"
                      }
                    },
                    {
                      "type": "TextView",
                      "layout_height": "32dp",
                      "layout_marginRight": "8dp",
                      "textSize": "12sp",
                      "textColor": "#2cdb81",
                      "text": "2",
                      "layout_weight": "2",
                      "gravity": "center",
                      "border": {
                        "width": "2dp",
                        "color": "#cccccc",
                        "bgColor": "#efefef"
                      }
                    },
                    {
                      "type": "TextView",
                      "layout_height": "32dp",
                      "layout_marginRight": "8dp",
                      "textSize": "12sp",
                      "textColor": "#2cdb81",
                      "text": "3",
                      "layout_weight": "3",
                      "gravity": "center",
                      "border": {
                        "width": "2dp",
                        "color": "#cccccc",
                        "bgColor": "#efefef"
                      }
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "type": "RelativeLayoutExample",
          "padding": "16dp",
          "paddingBottom": "0dp"
        },
        {
          "type": "SimpleDataBindingExample",
          "padding": "16dp",
          "paddingBottom": "0dp"
        }
      ]
    }
  ]
}
